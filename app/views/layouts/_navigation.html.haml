= link_to root_path, :class => 'brand' do
  = image_tag 'logo.png'
  %span.version alfa

%ul.nav#project_control
  %li#project_new
    = link_to '#/new', :id => 'new-project-link' do
      %i.icon-folder
      &nbsp;
      New project

%ul.nav#scale-nav
  %li.divider-vertical
  %li
    .btn-toolbar
      .btn-group
        %a.btn.btn-inverse.btn-mini#scale-week{:href=>'#week'} week
        %a.btn.btn-inverse.btn-mini#scale-month{:href=>'#month'} month
        %a.btn.btn-inverse.btn-mini#scale-year{:href=>'#year'} year

%ul.nav#today-nav

%ul.nav.pull-right{:style=>'font-size: 16px'}
