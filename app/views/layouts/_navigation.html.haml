    %li.signup
      .navbar-text
        Sign up to save your projects &rarr;

    = render :partial => 'auth/facebook'
    = render :partial => 'auth/twitter'
    = render :partial => 'auth/google'

  - else
    %li
      = link_to 'javascript: void()' do
        -if current_user.avatar?
          = image_tag current_user.avatar.thumb.url, class: 'avatar-thumb'
        -else
          %i.icon-user   
        &nbsp;
        = current_user
    = render :partial => 'auth/facebook'
    = render :partial => 'auth/twitter'
